{
	"version": 2,
	"routes": [ 
		{ "src": "/(?<type>[^/]+)/(?<id>[^/]+)", "dest": "server.php?resource_type=$type&resource_id=$id" },
		{ "src": "/(?<type>[^/]+)(/)*", "dest": "server.php?resource_type=$type" },
		{ "src": "/(.*)", "dest": "server.php", "status": 404 }
	],
  "name": "platzi-rest-api",
  "builds": [
	{ 
		"src": "*.php", 
		"use": "@now/php" 
	}
  ]
}
